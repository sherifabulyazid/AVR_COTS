#include "STD.h"
#include "BIT_MATH.h"

#include "DIO_Config.h"
#include "DIO_Interface.h"
#include "DIO_Private.h"
#include "DIO_Register.h"

void setPinDirection(uint8  Copy_Port ,  uint8 Copy_Pin ,  uint8 Copy_Direction)
{
	if (Copy_Pin <= 7)
	{
		if(Copy_Direction == OUTPUT)
		{
			switch(Copy_Port)
			{
				case DIO_PORTA:
					SETBIT(DDRA,Copy_Pin);
					break;
				case DIO_PORTB:
					SETBIT(DDRB,Copy_Pin);
					break;
				case DIO_PORTC:
					SETBIT(DDRC,Copy_Pin);
						break;
				case DIO_PORTD:
					SETBIT(DDRD,Copy_Pin);
					break;
				default:
					break;
			}
		}
		else if (Copy_Direction == INPUT)
		{
			switch(Copy_Port)
			{
				case DIO_PORTA:
					CLEARBIT(DDRA,Copy_Pin);
					break;
				case DIO_PORTB:
					CLEARBIT(DDRB,Copy_Pin);
					break;
				case DIO_PORTC:
					CLEARBIT(DDRC,Copy_Pin);
						break;
				case DIO_PORTD:
					CLEARBIT(DDRD,Copy_Pin);
					break;
				default:
					break;
			}
		}

		else
		{

		}
	}

}
